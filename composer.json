{
  "name": "brandembassy/mockery-tools",
  "license": "proprietary",
  "prefer-stable": true,
  "config": {
    "lock": false,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "BrandEmbassy\\MockeryTools\\": "src/MockeryTools"
    }
  },
  "require": {
    "php": ">= 7.4 || ^8.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "guzzlehttp/guzzle": "^6.3 || ^7.0",
    "marc-mabe/php-enum": "^3.0 || ^4.0",
    "mockery/mockery": "^1.3",
    "nette/di": "^2.4 || ^3.0",
    "nette/utils": "^2.4 || ^3.0",
    "phpunit/phpunit": ">=8.5.23 || ^9.0",
    "ramsey/uuid": "^3.0 || ^4.0",
    "spatie/phpunit-snapshot-assertions": "^4.2"
  },
  "require-dev": {
    "brandembassy/coding-standard": "10.0.0-beta",
    "roave/security-advisories": "dev-latest"
  },
  "scripts": {
    "check-cs": "vendor/bin/ecs check --ansi",
    "fix-cs": "vendor/bin/ecs check --fix --ansi",
    "phpstan": "php -dxdebug.mode=off vendor/bin/phpstan analyse --memory-limit=-1",
    "phpstan-generate-baseline": "php -dxdebug.mode=off vendor/bin/phpstan analyse --memory-limit=-1 --generate-baseline",
    "test": "./vendor/bin/phpunit src"
  }
}
