{
  "name": "brandembassy/mockery-tools",
  "license": "proprietary",
  "prefer-stable": true,
  "config": {
    "lock": false,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "BrandEmbassy\\MockeryTools\\": "src/MockeryTools"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.3 || ^7.0",
    "guzzlehttp/psr7": "^2.7",
    "marc-mabe/php-enum": "^3.0 || ^4.0",
    "mockery/mockery": "^1.6.7",
    "nette/di": "^2.4 || ^3.0",
    "nette/utils": "^2.4 || ^3.0",
    "phpunit/phpunit": "^9.6 || ^10.5",
    "psr/http-message": "^2.0",
    "ramsey/uuid": "^3.0 || ^4.0",
    "sebastian/comparator": "^5.0",
    "spatie/phpunit-snapshot-assertions": "^4.2 || ^5.1"
  },
  "require-dev": {
    "brandembassy/coding-standard": "^14.5",
    "roave/security-advisories": "dev-latest"
  },

  "scripts": {
    "check-cs": "vendor/bin/ecs check --ansi",
    "fix-cs": "vendor/bin/ecs check --fix --ansi",
    "phpstan": "php -dxdebug.mode=off vendor/bin/phpstan analyse --memory-limit=-1",
    "phpstan-generate-baseline": "php -dxdebug.mode=off vendor/bin/phpstan analyse --memory-limit=-1 --generate-baseline",
    "phpunit": "./vendor/bin/phpunit --no-coverage",
    "check-rector": "vendor/bin/rector process --dry-run --ansi",
    "fix-rector": "vendor/bin/rector process --ansi"
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/BrandEmbassy/coding-standard"
    }
  ]
}
